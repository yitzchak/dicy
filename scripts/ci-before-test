#!/usr/bin/env bash

shopt -s nocasematch

echo Bootstrapping...
if [[ "${APPVEYOR:-}" == true ]]; then
  npm install -g lerna
  npm run bootstrap -- --concurrency=1 --scope=@dicy/types
  npm run bootstrap -- --concurrency=1 --scope=@dicy/core
  npm run bootstrap -- --concurrency=1 --scope=@dicy/server
fi

npm run bootstrap -- --concurrency=1
