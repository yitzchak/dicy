{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "lib",
    "pretty": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": [
    "src",
    "types"
  ]
}
