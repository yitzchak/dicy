{
  "name": "ouroboros",
  "version": "0.0.0",
  "description": "A circular dependency builder designed with LaTeX in mind.",
  "main": "lib/main.js",
  "scripts": {
    "test": "echo Linting sources ... && ./node_modules/.bin/eslint --color src spec && echo Running specs... && ./node_modules/.bin/jasmine",
    "compile": "./node_modules/.bin/babel -d lib/ src/",
    "bin": "lib/ouroboros.js",
    "lint": "./node_modules/.bin/eslint --color src spec",
    "flow-typed": "./node_modules/.bin/flow-typed update"
  },
  "bin": {
    "ouroboros": "lib/ouroboros.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yitzchak/ouroboros.git"
  },
  "author": "Tarn Burton <twburton@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "fs-promise": "^1.0.0",
    "js-yaml": "^3.7.0",
    "mz": "^2.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-preset-flow": "^1.0.0",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-flowtype-errors": "^2.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "flow-bin": "^0.36.0",
    "flow-typed": "^2.0.0",
    "jasmine": "^2.5.3"
  },
  "babel": {
    "presets": [
      "latest",
      "flow"
    ],
    "plugins": [
      "transform-class-properties",
      "syntax-async-generators"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "flowtype-errors"
    ],
    "env": {
      "jasmine": true
    },
    "rules": {
      "flowtype-errors/show-errors": 2,
      "flowtype/delimiter-dangle": [
        2,
        "never"
      ],
      "flowtype/require-valid-file-annotation": [
        2,
        "always",
        {
          "annotationStyle": "block"
        }
      ]
    }
  }
}
