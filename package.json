{
  "name": "dicy",
  "version": "0.11.0",
  "description": "A builder for LaTeX, knitr, literate Agda, literate Haskell and Pweave that automatically builds dependencies.",
  "keywords": [
    "latex",
    "knitr",
    "sage",
    "biblatex"
  ],
  "bugs": "https://github.com/yitzchak/dicy/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/yitzchak/dicy.git"
  },
  "author": "Tarn Burton <twburton@gmail.com>",
  "contributors": [],
  "homepage": "https://yitzchak.github.io/dicy/",
  "engines": {
    "node": ">=7.0.0"
  },
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "create-fixtures": "scripts/create-fixtures",
    "dicy": "node packages/cli/lib/main.js",
    "fix": "npm run fix-md && npm run fix-js",
    "fix-js": "echo Fixing JavaScript... | chalk yellowBright bold && eslint --color --fix packages",
    "fix-md": "echo Fixing MarkDown... | chalk yellowBright bold && remark . -o",
    "flow-typed-update": "flow-typed install --overwrite --skip",
    "format-yaml": "babel-node scripts/format-yaml.js",
    "lerna-publish": "lerna publish",
    "lerna-updated": "lerna updated",
    "lint": "npm run lint-md && npm run lint-js",
    "lint-js": "echo Linting JavaScript... | chalk yellowBright bold && eslint --color packages",
    "lint-md": "echo Linting MarkDown... | chalk yellowBright bold && remark .",
    "specs": "echo Running core specs... | chalk yellowBright bold && cd packages/core && npm test",
    "test": "npm run lint && npm run specs",
    "update-dependencies": "lerna exec -- node ../../scripts/update-dependencies.js",
    "update-types": "babel-node scripts/update-types && eslint --fix packages/core/src/types.js"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chalk": "^2.1.0",
    "cliui": "^3.2.0",
    "command-join": "^2.0.0",
    "fast-glob": "^1.0.1",
    "fs-extra": "^4.0.2",
    "graphlib": "^2.1.1",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "micromatch": "^3.1.0",
    "readdir-enhanced": "^1.5.2",
    "semver": "^5.4.1",
    "temp": "^0.8.3",
    "tree-kill": "^1.2.0",
    "tslint": "^5.8.0",
    "yargs": "^10.0.3",
    "yargs-parser": "^8.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^4.0.3",
    "@types/graphlib": "^2.1.4",
    "@types/js-yaml": "^3.9.1",
    "@types/lodash": "^4.14.80",
    "@types/node": "^8.0.47",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "chalk-cli": "^4.0.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-flowtype-errors": "^3.3.4",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.57.2",
    "flow-typed": "^2.2.0",
    "jasmine": "^2.8.0",
    "lerna": "^2.4.0",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.1",
    "remark-preset-lint-markdown-style-guide": "^2.1.1",
    "remark-preset-lint-recommended": "^3.0.1",
    "rimraf": "^2.6.2",
    "tosource": "^1.0.0",
    "typescript": "^2.5.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "7.0.0"
          }
        }
      ],
      "stage-3",
      "flow"
    ],
    "plugins": [
      "transform-runtime",
      "transform-class-properties",
      "transform-strict-mode"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-consistent",
      "preset-lint-markdown-style-guide",
      "preset-lint-recommended",
      [
        "lint-list-item-spacing",
        false
      ],
      [
        "lint-no-duplicate-headings",
        false
      ],
      [
        "lint-no-file-name-irregular-characters",
        false
      ],
      [
        "lint-ordered-list-marker-value",
        "ordered"
      ]
    ]
  }
}
