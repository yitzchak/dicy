{
  "name": "dicy",
  "version": "0.6.0",
  "description": "A builder for LaTeX, knitr, literate Agda and literate Haskell that automatically builds dependencies.",
  "keywords": [
    "latex",
    "knitr",
    "sage",
    "biblatex"
  ],
  "bugs": "https://github.com/yitzchak/dicy/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/yitzchak/dicy.git"
  },
  "author": "Tarn Burton <twburton@gmail.com>",
  "contributors": [],
  "homepage": "https://yitzchak.github.io/dicy/",
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "create-fixtures": "scripts/create-fixtures",
    "dicy": "node packages/cli/lib/main.js",
    "lint": "echo Linting sources... && eslint --color packages",
    "lerna-publish": "lerna publish",
    "lerna-updated": "lerna updated",
    "specs": "echo Running core specs... && cd packages/core && npm test",
    "test": "npm run lint && npm run specs",
    "update-dependencies": "lerna exec -- node ../../scripts/update-dependencies.js",
    "flow-typed-update": "flow-typed update && lerna exec -- flow-typed update"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "chalk": "^2.0.0",
    "cliui": "^3.2.0",
    "command-join": "^2.0.0",
    "commander": "^2.10.0",
    "fast-glob": "^1.0.1",
    "fs-extra": "^4.0.0",
    "js-yaml": "^3.8.4",
    "lodash": "^4.17.4",
    "micromatch": "^3.0.1",
    "readdir-enhanced": "^1.5.2",
    "temp": "^0.8.3",
    "tree-kill": "^1.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^4.1.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-flowtype-errors": "^3.3.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.51.0",
    "flow-typed": "^2.1.2",
    "jasmine": "^2.6.0",
    "lerna": "^2.0.0"
  },
  "babel": {
    "presets": [
      "latest",
      "flow"
    ],
    "plugins": [
      "transform-runtime",
      "transform-class-properties",
      "transform-strict-mode",
      "syntax-async-generators",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "flowtype-errors"
    ],
    "env": {
      "jasmine": true,
      "node": true
    },
    "rules": {
      "flowtype-errors/show-errors": 2,
      "flowtype/delimiter-dangle": [
        2,
        "never"
      ],
      "flowtype/require-valid-file-annotation": [
        2,
        "always",
        {
          "annotationStyle": "block"
        }
      ]
    }
  }
}
