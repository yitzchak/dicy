{
  "name": "ouroboros",
  "version": "0.0.0",
  "description": "A circular dependency builder designed with LaTeX in mind.",
  "main": "lib/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "echo ./node_modules/.bin/babel -d lib/ src/",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yitzchak/ouroboros.git"
  },
  "author": "Tarn Burton <twburton@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "child-process-promise": "^2.1.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-flowtype-errors": "^2.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "flow-bin": "^0.36.0"
  },
  "babel": {
    "presets": [
      "es2017"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "flowtype-errors"
    ],
    "env": {
      "atomtest": true,
      "jasmine": true
    },
    "globals": {
      "atom": true,
      "latex": true
    },
    "rules": {
      "flowtype-errors/show-errors": 2,
      "flowtype/delimiter-dangle": [
        2,
        "never"
      ],
      "flowtype/require-valid-file-annotation": [
        2,
        "always",
        {
          "annotationStyle": "block"
        }
      ]
    }
  }
}
